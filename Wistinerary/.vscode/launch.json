    "version": "0.2.0",
    "configurations": [
        {
            "name": "runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django Run Script (test_query)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/test_query.py",
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "wistinerary.settings"
            }
        },
        {
            "name": "Django Runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "console": "integratedTerminal",
            "env": {
                "DJANGO_SETTINGS_MODULE": "wistinerary.settings"
            }
        }
    ]
}